# --------------------------------------------------------------#
#  Specify tasks which should be executed by Alpos
# --------------------------------------------------------------#
Tasks {{
  TaskType                TaskName
   PrintSteering           PrintSteering
   PrintTheorySet         PrintTheorySet
   AFitter                MyFit
   StatAnalysis           Stat
   SaveDPDFTGraph         SaveDPDFTGraph
   ReplaceDataWithTheoryValues  ReplaceDataWithTheoryValues
#   ASaveDataTheory        ASaveDataTheory
#   PlotDataTh 	         MyPlot
#   APrintDataTheory      APrintDataTheory    #maral
}}


# --------------------------------------------------------------#
#  Alpos global settings
# --------------------------------------------------------------#
ErrorSymmetrization             SignImprovedQuadratic
Output                          maral-test/alpos_results.root             # commonoutput file for outputs of all tasks
GlobalVerbosity                 Error  #Info # Debug, Warning, Error
InitSubsets                     false  # Init subsets of datasets
IgnoreTheoryErrors              false                            # Ignore all theory errors when calculating chi2 value
MatrixInversionTolerance        1.e-6                           # Tolerance of matrix inversion algorithm
# ALPOS_DIR                       <specify your directory>      # use env-variable ALPOS_DIR or specify it herewith


# --------------------------------------------------------------#
#  Task parameters
#    Put all parameters in a namespace with the task's name
# --------------------------------------------------------------#

MyFit {{{
   Minimizer                    TMinuit
   PrintLevel                   3
   Tolerance                    1
   Strategy                     1
   Chisq                        LogNormal # NuisanceMult #
   
   FitParameters { 
       #IP_ap
       #IP_b0
       #IR_a0
       #IR_ap
       #IR_b0
       IP_a0
       IR_n 
       PDFQ0_diff.g0  
       PDFQ0_diff.g2
       PDFQ0_diff.s0  
       PDFQ0_diff.s1  
       PDFQ0_diff.s2  
   }
        
   PrintResults                 true
   PrintCovariance              true

}}}


Stat {{{
   Chisq                        LogNormal # NuisanceMult #LogNormal
   Chisq2                       LogNormalNuisance  # Hamzeh 
   DoChisq                      true
   DoPValue                     true
}}}


SaveDPDFTGraph {{{
   DPDF                   DPDF     #ApfelxxPDF  # DPDF #  LHAPDF6   #  QcdnumPDF  # LHAPDF6    # Hamzeh 
   nzpom                100
   zmin                 0.001
   xpomValues           {  0.003 }
   Q2Values             { 1.75, 8.5, 20, 90, 800 }
#   AsciiOutput          true                         # Hamzeh    
#   Alphas               todo                        # Hamzeh
   LHAPDFoutput         lhaTest                                 # Hamzeh
   Alphas               ApfelxxAlphas                           # Hamzeh
#  
}}}
